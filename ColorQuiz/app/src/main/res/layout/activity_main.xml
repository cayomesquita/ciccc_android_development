<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_weight="0">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="@string/scoreLabel"/>
            <TextView
                android:id="@+id/scoreTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="0"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/select_rught_color_text_size"
            android:text="@string/select_rigth_color_label"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/left_color_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="@dimen/color_btn_size"
                android:height="@dimen/color_btn_size"
                android:background="@color/colorAccent"
                android:layout_marginHorizontal="@dimen/color_btn_margin_h"
                android:onClick="colorBtnOnClick"/>
            <Button
                android:id="@+id/right_color_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="@dimen/color_btn_size"
                android:height="@dimen/color_btn_size"
                android:background="@color/colorAccent"
                android:layout_marginHorizontal="@dimen/color_btn_margin_h"
                android:onClick="colorBtnOnClick"/>
        </LinearLayout>

    <TextView
        android:id="@+id/color_target_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="@dimen/color_target_text_size"
        android:gravity="center_horizontal|top"/>

</androidx.appcompat.widget.LinearLayoutCompat>